@model ThinkfulApp.Models.ChartModel

<h4>Immerse yourself in a new Goal</h4>
<hr />
<div id ="addGoalForm">
    <form asp-action="ProcessAddGoal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <div class="d-table-cell">
                <input asp-for="LabelList[0]" class="form-control" placeholder="Goal Name"/>
            </div>
            <div class="d-table-cell">
                <input asp-for="GoalList[0]" class="form-control" placeholder="Goal Progress"/>
            </div>           
        </div>
        <div class="form-group">
            <input type="submit" value="Enlist Goal" class="btn btn-primary" />
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
